<h1 class="display-4">Edit your Book!</h1>
<form role="form " action="/books/<%= @book.id%>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">
<div class="form-group">
<label for="author">Author: </label> 
  <input class="form-control" type="text" id="author" name="author" value="<%= @book.author%>"><br/>
</div>
  <div class="form-group">
  <label for="title">Title: </label> 
  <input class="form-control" type="text" id="title" name="title" value="<%= @book.title%>"><br/>
  </div>
  <div class="form-group">
  <label for="genre">Genre: </label> 
  <input  class="form-control" type="text" id="genre" name="genre" value="<%= @book.genre%>"><br/>
  </div>
  <div class="form-group">
  <label for="pages">Pages: </label> 
  <input class="form-control" type="number" id="pages" name="pages" min=0  value="<%= @book.pages%>"><br/>
  </div>
  <div class="input-group ">
  <div class="input-group-prepend">
  <label for="status" class="input-group-text">Status: </label>
  </div>
  <select class="custom-select" name="status" id="status">
    
    <option name="reading">Reading</option>
    <option name="wishlist">Wishlist</option>
    <option name="completed">Completed</option>
    
  </select>
  </div><br/>
  <input class="btn btn-primary col-md-2 mb-3" type="submit" value="submit">
  

</form>

<form  action="/books/<%= @book.id%>/delete" method="post">
<input id="hidden" type="hidden" name="_method" value="delete">
  
  <input class="btn btn-danger col-md-2 mb-3" type="submit" value="Delete">

</form> <br/>


<a class="btn btn-primary col-md-2 mb-3" href="/books">Go Home</a>
