<h1 class="display-4">Add a Book!</h1>

<div class="flash missing"><%= flash[:missing] %></div>
<div class="flash warning"><%= flash[:warning] %></div>
<form action="/books" method="post">
  <div class="form-group" class="col-md-4 mb-3">
    <label for="author">Author: </label> 
    <input class="form-control" type="text" id="author" name="author"><br/>
  </div>
  <div class="form-group">
    <label for="title">Title: </label> 
    <input class="form-control" type="text" id="title" name="title"><br/>
  </div>
  <div class="form-group">
    <label for="genre">Genre: </label> 
    <input class="form-control" type="text" id="genre" name="genre"><br/>
  </div>
  <div class="form-group">
    <label for="pages">Pages: </label> 
    <input class="form-control" type="number" id="pages" name="pages" min=0 ><br/>
  </div>
  <div class="input-group ">
  <div class="input-group-prepend">
  <label for="status" class="input-group-text">Status: </label>
  </div>
  
  <div class="flash message"><%= flash[:message] %></div>
  <select class="custom-select" name="status" id="status">
    
    <option name="reading">Reading</option>
    <option name="wishlist">Wishlist</option>
    <option name="completed">Completed</option>
    
  </select>
  </div><br/>
  <input class="btn btn-primary col-md-2 mb-3 " type="submit" value="submit">
  <a class="btn btn-success col-md-2 mb-3 " href="/books">Go Home</a>
</form>
