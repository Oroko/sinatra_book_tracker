
<div class="flash danger"><%= flash[:danger] %></div>
<div class="flash message"><%= flash[:message] %></div>
<form action="/login" method="post">
  <div class="form-group">
  <label for="email">Email: </label>
  <input class="form-control"type="email" id="email" name="email"><br>
  </div>
  <div class="form-group">
  <label for="password">Password: </label>
  <input class="form-control" type="password" id="password" name="password"><br>
  </div>
  <input class="btn btn-success col-md-2 mb-3" type="submit" value="Log In">
</form>